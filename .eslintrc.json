{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "parser": "vue-eslint-parser",
    "plugins": [
        "vue"
    ],
    "rules": {
        "no-console": "off",
        "quotes": [
            "error",
            "single"
        ],
        "radix": [
            "error",
            "as-needed"
        ],
        "func-names": ["error",
             "never", 
             { "generators": "always" }
        ],
        "no-unused-vars": ["error", { "args": "none" }],
        "camelcase": "error",
        "no-plusplus": 0,
        "no-shadow": 0,
        "global-require": 0,
        "no-underscore-dangle": 0,
        "consistent-return": ["error", 
            { "treatUndefinedAsUnspecified": false }
        ],
        "no-script-url": 0,
        "properties": 0,
        "no-alert": 0,
        "block-opening-brace-space-before": 0,
        "import/no-extraneous-dependencies": 0,
        "space-before-function-paren": ["error", {
            "anonymous": "never", 
            "named": "always"
        }],
        "semi": ["error", "never"],
        "max-len": [0],
        // "import/no-extraneous-dependencies": ["error", {
        // "optionalDependencies": ["test/unit/index.js"]
        // }],
        "import/no-unresolved": "off",
        "no-unused-expressions": ["error", { "allowTernary": true }],
        "no-param-reassign": 0,
        "quote-props": ["error", "consistent"],
        "vue/order-in-components": ["error", {
            "order": [
              "el",
              "name",
              "parent",
              "functional",
              ["delimiters", "comments"],
              ["components", "directives", "filters"],
              "extends",
              "mixins",
              "inheritAttrs",
              "model",
              ["props", "propsData"],
              "data",
              "computed",
              "watch",
              "LIFECYCLE_HOOKS",
              "methods",
              ["template", "render"],
              "renderError"
            ]
        }],
        "vue/html-closing-bracket-newline": [
            "error", {
                "singleline": "never",
                "multiline": "never"
            }
        ],
        "vue/html-closing-bracket-spacing": [
            "error", {
                "startTag": "never",
                "endTag": "never",
                "selfClosingTag": "always"
            }
        ],
        "vue/script-indent": [
            "error", 
            2, 
            {
                "baseIndent": 0,
                "switchCase": 1,
                "ignores": []
            }
        ],
        "vue/html-indent": ["error", 2, {
            "attribute": 1,
            "baseIndent": 1,
            "closeBracket": 0,
            "alignAttributesVertically": true,
            "ignores": []
        }],
        "vue/max-attributes-per-line": [
            2, 
            {
                "singleline": 1,
                "multiline": {
                    "max": 1,
                    "allowFirstLine": false
                }
            }
        ],
        "import/extensions": ["error", "never"]
        //"properties": "always"
    }
    
}